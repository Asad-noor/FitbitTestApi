<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.com.faqinteractive.fitbittestapi">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".FitbitAuthApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="au.com.faqinteractive.fitbittestapi.CLIENT_ID"
            android:value="227YZT"/>
        <meta-data
            android:name="au.com.faqinteractive.fitbittestapi.REDIRECT_URL"
            android:value="https://finished"/>

        <activity
            android:name=".RootActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Fitbit.Teal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".UserDataActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>